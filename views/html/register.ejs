<body onresize="WindowResized()" onload="WordCount();" onmousemove="notAfk()" onclick="notAfk()">
	
	<%- include('../fragmente/header')  %>
	
	<main>
        <div class="container">
            <div id="afk"></div>
            <h1> Inregistrare </h1>
            <form action="/inreg" method="post">
                <label for="fnume">Nume:</label>
                <input type="text" id="fnume" name="nume"><br><br>
                <label for="fprenume">Prenume:</label>
                <input type="text" id="fprenume" name="prenume"><br><br>
                <label for="fsex">Sex:</label>
                    <input type="radio" id="fsexm" name="sex" value="masculin" checked> Masculin
                    <input type="radio" id="fsexf" name="sex" value="feminin"> Feminin  
                    <br><br>
                <label for="fuser">Username:</label>
                <input type="text" id="fuser" name="username"><br><br>
                <label for="fpass">Parola:</label>
                <input type="password" id="fpass" name="parola"><br><br>
                <label for="fmail">Email:</label>
                <input type="text" id="fmail" name="email"><br><br>
                <input type="submit" value="Submit">
            </form> 
        </div>
    </main>
	
